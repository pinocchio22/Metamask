<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="swap"
            type="com.example.metamask.SwapActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightGray"
        tools:context=".SwapActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/up_line"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:text="스왑"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="8dp"
                    android:textColor="@color/LightBlue"
                    android:layout_margin="10dp"
                    android:layout_gravity="end"/>

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <TextView
                    android:id="@+id/swap_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음에서 스왑"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_token"
                        android:background="@drawable/rounded_spinner"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/edit_text_token"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_edittext"
                        android:hint="0"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/swap_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ETH 스왑 가능"
                    android:textSize="8sp"
                    android:textColor="@color/LightGray"/>

                <ImageButton
                    android:id="@+id/btn_change"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_exchange"
                    android:layout_gravity="end" />

                <TextView
                    android:id="@+id/swap_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음으로 스왑"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/spinner_token_select"
                    android:background="@drawable/rounded_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <Spinner
                    android:id="@+id/spinner_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_complete"
                    android:text="스왑 검토"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/term"
                    android:text="서비스 약관"
                    android:textSize="8sp"
                    android:textColor="@color/LightBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>